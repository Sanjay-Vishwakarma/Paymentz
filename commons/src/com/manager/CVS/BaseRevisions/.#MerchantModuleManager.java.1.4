package com.manager;

import com.directi.pg.Logger;
import com.manager.dao.MerchantModuleDAO;
import com.manager.vo.MerchantModulesMappingVO;
import com.payment.exceptionHandler.PZDBViolationException;

import java.util.HashMap;
import java.util.List;
import java.util.Set;

/**
 * Created by admin on 4/26/2016.
 */
public class MerchantModuleManager
{

    Logger logger=new Logger(MerchantModuleManager.class.getName());
    private MerchantModuleDAO merchantModuleDAO=new MerchantModuleDAO();
    public Set<String> getMerchantAccessModuleSet(String userId)throws PZDBViolationException
    {
        logger.debug("Entering Into MerchantModule Manager");
        return merchantModuleDAO.getMerchantAccessModuleSet(userId);
    }
    public String addNewModuleMapping(MerchantModulesMappingVO merchantModulesMappingVO)throws PZDBViolationException
    {
        return merchantModuleDAO.addNewModuleMapping(merchantModulesMappingVO);
    }
    public String addNewSubModuleMapping(MerchantModulesMappingVO merchantModulesMappingVO)throws PZDBViolationException
    {
        return merchantModuleDAO.addNewSubModuleMapping(merchantModulesMappingVO);
    }
    public boolean isMappingAvailable(MerchantModulesMappingVO merchantModulesMappingVO)throws PZDBViolationException
    {
        return merchantModuleDAO.isMappingAvailable(merchantModulesMappingVO);
    }
    public boolean isMappingRemoved(String id)throws PZDBViolationException
    {
        return merchantModuleDAO.isMappingRemoved(id);
    }
    public boolean isSubMappingRemoved(String id)throws PZDBViolationException
    {
        return merchantModuleDAO.isSubMappingRemoved(id);
    }
    public boolean removeMerchantModuleMapping(String  moduleId)throws PZDBViolationException
    {
        return merchantModuleDAO.removeMerchantModuleMapping(moduleId);
    }
    public HashMap<String,List> getMerchantModuleList() throws PZDBViolationException
    {
        return merchantModuleDAO.merchantModuleList();
    }
    public HashMap<String,List> merchantUserModuleList(String userid) throws PZDBViolationException
    {
        return merchantModuleDAO.merchantUserModuleList(userid);
    }
    public Set<String> getMerchantRestrictedModuleSet(String id)throws PZDBViolationException
    {
        return merchantModuleDAO.getMerchantRestrictedModuleSet(id);
    }
    public boolean isMappingAvailable(String userid,String modulename)throws PZDBViolationException
    {
        return merchantModuleDAO.isMappingAvailable(userid,modulename);
    }

}

