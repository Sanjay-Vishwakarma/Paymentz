package com.directi.pg;

import com.logicboxes.util.LBThreadLocal;
import org.apache.log4j.Category;

public class Logger
{
    protected Category cat = null;

    public Logger(String classname)
    {
        cat = Category.getInstance(classname);
    }

    public void info(Object o)
    {
        info(format(o));
    }

    public void info(String str)
    {
        cat.info(format(str));
    }

    public void debug(Object o)
    {
        debug(format(o));
    }

    public void debug(String str)
    {
        cat.debug(format(str));
    }

    public void error(Object o)
    {
        error(format(o));
    }

    public void error(String str)
    {
        cat.error(format(str));
    }

    public void error(String str,Throwable e)
    {
        cat.error(format(str),e);
    }

    private String format(String str)
    {
        return " [" + LBThreadLocal.get() + "] : " + str;
    }

    private String format(Object o)
    {
        return format(o.toString());
    }

    
}
